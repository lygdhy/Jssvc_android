<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <item name="android:windowAnimationStyle">@style/activity_animation</item>
        <item name="android:listDivider">@drawable/divider_bg</item>
        <item name="android:windowBackground">@color/color_ui_content</item>
    </style>

    <!--启动页主题-->
    <style name="StartAppTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/layout_list_start_pic</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/actionbar_textsize_left</item>
    </style>

    <style name="activity_animation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <!-- actionbar_whole_style_base -->
    <style name="actionbar_whole_style_base">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/actionbar_height</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@color/color_ui_head</item>
    </style>

    <!-- actionbar_title_style_base -->
    <style name="actionbar_title_style_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/actionbar_textsize_title</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- actionbar_left_style_base -->
    <style name="actionbar_left_style_base">
        <item name="android:layout_width">@dimen/actionbar_height_left</item>
        <item name="android:layout_height">@dimen/actionbar_height_left</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawableLeft">@drawable/arrow_left_white</item>
        <item name="android:textSize">@dimen/actionbar_textsize_left</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- actionbar_right_style_base -->
    <style name="actionbar_right_style_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/actionbar_height_right</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/actionbar_textsize_right</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="actionbar_right_icon" parent="actionbar_right_style_base">
        <!-- <item name="android:drawableTint">@color/color_drawable_tint</item>-->
        <item name="android:tint">@color/color_drawable_tint</item>
    </style>

    <!-- 菜单Item_分割线 -->
    <style name="item_split_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/color_divider</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <!-- 菜单Item_分割线 -->
    <style name="item_split_vertical">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_divider</item>
    </style>

    <style name="style_text_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="style_text_body" parent="style_text_base">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_text_content</item>
    </style>

    <style name="style_text_body_light" parent="style_text_body">
        <item name="android:textColor">@color/color_text_content_light</item>
    </style>

    <style name="style_text_theme" parent="style_text_body">
        <item name="android:textColor">@color/color_ui_theme</item>
    </style>

    <style name="style_text_title" parent="style_text_base">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_text_title</item>
    </style>

    <!--首页菜单文字-->
    <style name="style_text_title_white" parent="style_text_base">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--菜单列表样式-->
    <style name="style_menu_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/opt_menu_height</item>
        <item name="android:background">@drawable/bg_selector_while</item>
    </style>

    <style name="style_menu_list" parent="style_menu_base">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <!--列表菜单1-1-->
    <style name="style_text_key_menu" parent="style_text_base">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_text_title</item>
    </style>

    <style name="style_text_key_menu_sub" parent="style_text_base">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_text_content_light</item>
    </style>

    <!--列表菜单1-2-->
    <style name="style_text_value_menu" parent="style_text_base">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">right</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginLeft">100dp</item>
        <item name="android:textColor">@color/color_text_content</item>
        <item name="android:textColorHint">@color/color_text_hint</item>
    </style>

    <!--列表菜单2-1-->
    <style name="style_text_key_content" parent="style_text_key_menu">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_ui_theme</item>
    </style>

    <!--列表菜单2-2-->
    <style name="style_text_value_content" parent="style_text_value_menu">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_text_content</item>
    </style>

    <!--EditText-->
    <style name="style_edit_text" parent="style_text_body">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/opt_menu_height</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_text_content</item>
        <item name="android:textColorHint">@color/color_text_hint</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:lines">1</item>
    </style>

    <!--EditText-->
    <style name="style_search_edit_text" parent="style_text_body">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_text_content</item>
        <item name="android:textColorHint">@color/color_text_hint</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/bg_white_circle_15</item>
        <item name="android:drawableLeft">@drawable/icon_search_white</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <!--Button base-->
    <style name="style_button_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="style_button_primary" parent="style_button_base">
        <item name="android:background">@drawable/bg_selector_primary</item>
    </style>

    <style name="style_button_danger" parent="style_button_base">
        <item name="android:background">@drawable/bg_selector_danger</item>
    </style>

    <!--自定义对话框-->
    <style name="style_dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HintAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="HintErrorAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_danger</item>
        <item name="textColorError">@color/color_danger</item>
    </style>

    <style name="TextErrorAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_danger</item>
        <item name="textColorError">@color/color_danger</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_text_content</item>
    </style>

</resources>
