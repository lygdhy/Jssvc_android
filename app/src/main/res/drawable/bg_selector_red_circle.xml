<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>

            <!-- 填充 -->
            <solid android:color="#ea4235" />

            <!-- 颜色渐变：渐变方向、开始颜色、结束颜色 -->
            <gradient android:angle="90" android:endColor="#ea4235" android:startColor="#ea4235" android:type="linear" />

            <!-- 按钮边缘：边缘宽、边缘颜色 -->
            <stroke android:width="0dp" android:color="#ea4235" />

            <!-- 按钮四个圆角：半径 -->
            <corners android:radius="6dp" />

            <!-- 按钮文字和边缘距离(内边距) -->
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>

            <!-- 填充 -->
            <solid android:color="#e3382b" />

            <!-- 颜色渐变：渐变方向、开始颜色、结束颜色 -->
            <gradient android:angle="90" android:endColor="#e3382b" android:startColor="#e3382b" android:type="linear" />

            <!-- 按钮边缘 -->
            <stroke android:width="0dp" android:color="#e3382b" />

            <!-- 按钮四个圆角：半径 -->
            <corners android:radius="6dp" />

            <!-- 按钮文字和边缘距离(内边距) -->
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape>
    </item>

</selector>