<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 设置整个屏幕背景为白色 -->
    <item>
        <color android:color="@color/color_white" />
    </item>

    <!-- 中间logo -->
    <item android:bottom="140dp">
        <bitmap
            android:gravity="center"
            android:src="@drawable/bg_splash_screen_logo" />
    </item>
    <!-- 底部图表 -->
    <item android:bottom="30dp">
        <bitmap
            android:gravity="bottom"
            android:src="@drawable/bg_splash_screen_coypright" />
    </item>

</layer-list>