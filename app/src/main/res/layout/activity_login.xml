<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ui_content"
    android:orientation="vertical"
    >

  <RelativeLayout style="@style/actionbar_whole_style_white">
    <TextView
        android:id="@+id/tv_back"
        android:drawableLeft="@drawable/icon_close_theme"
        style="@style/actionbar_left_style_white"
        />
    <TextView
        android:text="登录"
        style="@style/actionbar_title_style_white"
        />
    <TextView
        android:id="@+id/tv_register"
        android:text="注册"
        style="@style/actionbar_right_style_white"
        />
    <View style="@style/item_split_horizontal"/>
  </RelativeLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:background="@color/color_white"
      android:orientation="vertical"
      >
    <View style="@style/item_split_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

      <TextView
          android:layout_width="80dp"
          android:gravity="right"
          android:text="帐号"
          style="@style/style_text_body"
          />

      <EditText
          android:id="@+id/edt_username"
          android:layout_marginLeft="10dp"
          android:hint="请输入手机号码"
          android:inputType="number"
          android:text=""
          style="@style/style_edit_text"
          />
    </LinearLayout>
    <View style="@style/item_split_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

      <TextView
          android:layout_width="80dp"
          android:gravity="right"
          android:text="密码"
          style="@style/style_text_body"
          />

      <EditText
          android:id="@+id/edt_pwd"
          android:layout_marginLeft="10dp"
          android:hint="请输入密码"
          android:inputType="textPassword"
          android:text=""
          style="@style/style_edit_text"
          />
    </LinearLayout>
    <View style="@style/item_split_horizontal"/>
  </LinearLayout>

  <Button
      android:id="@+id/btn_login"
      android:layout_margin="20dp"
      android:text="登录"
      style="@style/style_button_primary"
      />
</LinearLayout>
