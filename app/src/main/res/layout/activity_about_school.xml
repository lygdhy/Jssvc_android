<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    >
  <RelativeLayout
      style="@style/actionbar_whole_style_base"
      >
    <TextView
        android:id="@+id/tv_back"
        style="@style/actionbar_left_style_base"
        />
    <TextView
        android:text="关于图书馆"
        style="@style/actionbar_title_style_base"
        />
    <View style="@style/item_split_horizontal"/>
  </RelativeLayout>

  <cn.bingoogolapple.refreshlayout.BGAStickyNavLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
      <ImageView
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:layout_margin="10dp"
          android:src="@drawable/icon_logo"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >
        <TextView
            android:text="苏州市职业大学图书馆"
            style="@style/style_text_title"
            />
        <TextView
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="2dp"
            android:text="外文名  Suzhou Vocational University Library\n网    站  http://lib.jssvc.edu.cn/\n地    址  苏州市致能大道106号"
            android:textSize="10sp"
            style="@style/style_text_body_light"
            />
        />
      </LinearLayout>
    </LinearLayout>

    <cn.bingoogolapple.bgaindicator.BGAFixedIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/white"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        app:indicator_dividerColor="@color/color_divider"
        app:indicator_dividerVerticalMargin="5dp"
        app:indicator_dividerWidth="0.5dp"
        app:indicator_hasDivider="true"
        app:indicator_textColor="@color/colorAccent"
        app:indicator_textSizeNormal="12sp"
        app:indicator_textSizeSelected="14sp"
        app:indicator_triangleColor="@color/colorAccent"
        app:indicator_triangleHeight="2dp"
        app:indicator_triangleHorizontalMargin="5dp"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
  </cn.bingoogolapple.refreshlayout.BGAStickyNavLayout>
</LinearLayout>
