<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/smallLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvKey1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="KEY"
            android:textColor="@color/color_ui_theme"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvValue1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tvKey1"
            android:gravity="right"
            android:lineSpacingExtra="2dp"
            android:text="VALUE"
            android:textColor="@color/color_text_content"
            android:textIsSelectable="true"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvKey2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KEY"
            android:textColor="@color/color_ui_theme"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvValue2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:lineSpacingExtra="2dp"
            android:text="VALUEVALUEVALUEVALUEVALUEVALUEVALUEVALUEVALUEVALUEVALUEVALUEVALUEVALUEVALUEVALUEVALUEVALUEVALUE"
            android:textColor="@color/color_text_content"
            android:textIsSelectable="true"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>