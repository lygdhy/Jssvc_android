<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ui_content"
    android:orientation="vertical">

    <RelativeLayout style="@style/actionbar_whole_style_base">

        <TextView
            android:id="@+id/tvBack"
            style="@style/actionbar_left_style_base" />

        <TextView
            style="@style/actionbar_title_style_base"
            android:text="意见反馈" />

        <TextView
            android:id="@+id/tvChat"
            style="@style/actionbar_right_style_base"
            android:drawableLeft="@drawable/icon_menu_chat" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/edtFeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/color_white"
                android:gravity="start"
                android:hint="您的宝贵意见是我们进步最大的动力！"
                android:lines="5"
                android:padding="10dp"
                android:textColor="@color/color_text_content"
                android:textColorHint="@color/color_text_hint"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="-4.5dp"
                android:background="@color/color_white"
                android:gravity="start"
                android:hint="请留下您的联系方式"
                android:lines="1"
                android:padding="10dp"
                android:textColor="@color/color_text_content"
                android:textColorHint="@color/color_text_hint"
                android:textSize="14dp" />

            <Button
                android:id="@+id/btnSubFeed"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_selector_blue_circle"
                android:text="提交"
                android:textColor="@color/color_white"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
