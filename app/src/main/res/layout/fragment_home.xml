<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ui_content"
    android:orientation="vertical"
    >
  <android.support.v4.widget.NestedScrollView
      android:id="@+id/nested_scroll_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scrollbars="none"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

      <!--广告-->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="190dp"
          android:background="@android:color/white"
          android:gravity="center"
          >
        <com.bigkoo.convenientbanner.ConvenientBanner
            android:id="@+id/convenientBanner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:canLoop="true"
            />
      </LinearLayout>

      <!--菜单-->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@android:color/white"
          android:orientation="vertical"
          >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/menu_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            />
      </LinearLayout>

      <!--提示-->
      <RelativeLayout
          android:id="@+id/weather_layout"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_marginTop="10dp"
          android:background="@android:color/white"
          android:orientation="vertical"
          android:paddingLeft="15dp"
          android:paddingRight="15dp"
          >

        <ImageView
            android:id="@+id/iv_wea"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_weather_05"
            />
        <LinearLayout
            android:id="@+id/wea_layout_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_wea"
            android:orientation="vertical"
            >
          <TextView
              android:id="@+id/tv_temp1"
              android:text="00°"
              style="@style/style_text_title"
              />
          <TextView
              android:id="@+id/tv_temp2"
              android:text="00°C~00°C"
              android:textSize="10sp"
              style="@style/style_text_body"
              />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/wea_layout_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/wea_layout_2"
            android:orientation="vertical"
            >
          <TextView
              android:id="@+id/tv_city"
              android:layout_marginBottom="1dp"
              android:layout_marginTop="1dp"
              android:text="XX市"
              style="@style/style_text_body"
              />
          <TextView
              android:id="@+id/tv_info"
              android:text="小于转中雨"
              android:textSize="10sp"
              style="@style/style_text_body"
              />
        </LinearLayout>
        <View
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/wea_layout_4"
            style="@style/item_split_vertical"
            />
        <LinearLayout
            android:id="@+id/wea_layout_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/wea_layout_5"
            android:gravity="center"
            android:orientation="vertical"
            >
          <TextView
              android:id="@+id/tv_pm"
              android:layout_marginBottom="2dp"
              android:text="00"
              style="@style/style_text_body"
              />
          <TextView
              android:text="pm2.5"
              android:textSize="10sp"
              style="@style/style_text_body"
              />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/wea_layout_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical"
            >
          <TextView
              android:id="@+id/tv_level"
              android:layout_marginBottom="2dp"
              android:text="优"
              style="@style/style_text_body"
              />
          <TextView
              android:text="空气"
              android:textSize="10sp"
              style="@style/style_text_body"
              />
        </LinearLayout>

      </RelativeLayout>

      <!--模块-->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:background="@android:color/white"
          android:orientation="vertical"
          >
        <TextView
            android:id="@+id/tv_model_title"
            android:layout_margin="10dp"
            android:text="新闻资讯"
            style="@style/style_text_title"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/new_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
      </LinearLayout>

      <!--模块-->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:background="@android:color/white"
          android:orientation="vertical"
          android:visibility="gone"
          >
        <View
            style="@style/item_split_horizontal"
            />
        <TextView
            android:layout_margin="10dp"
            android:text="图书推荐"
            style="@style/style_text_title"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            ></LinearLayout>
        <View
            style="@style/item_split_horizontal"
            />
      </LinearLayout>

      <!--模块-->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:background="@android:color/white"
          android:orientation="vertical"
          android:visibility="gone"
          >
        <View
            style="@style/item_split_horizontal"
            />
        <TextView
            android:layout_margin="10dp"
            android:text="经典图书"
            style="@style/style_text_title"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            ></LinearLayout>
        <View
            style="@style/item_split_horizontal"
            />
      </LinearLayout>
    </LinearLayout>
  </android.support.v4.widget.NestedScrollView>

  <FrameLayout
      android:background="@null"
      style="@style/actionbar_whole_style_base"
      >
    <RelativeLayout
        android:id="@+id/top_def_layout"
        android:background="@drawable/bg_home_captain"
        style="@style/actionbar_whole_style_base"
        />
    <RelativeLayout
        android:background="@null"
        style="@style/actionbar_whole_style_base"
        >
      <EditText
          android:id="@+id/edt_search"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:clickable="true"
          android:editable="false"
          android:hint="书籍是人类进步的阶梯"
          style="@style/style_search_edit_text"
          />
    </RelativeLayout>

  </FrameLayout>
</FrameLayout>