<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ui_content"
    android:orientation="vertical"
    >
  <RelativeLayout
      style="@style/actionbar_whole_style_base"
      >

    <TextView
        android:text="掌上图书馆"
        style="@style/actionbar_title_style_base"
        />
  </RelativeLayout>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scrollbars="none"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="140dp"
          android:background="@android:color/white"
          android:gravity="center"
          >
        <TextView
            android:text="广告墙"
            style="@style/style_text_body_light"
            />
      </LinearLayout>
      <View
          style="@style/item_split_horizontal"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="200dp"
          android:orientation="horizontal"
          >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="vertical"
            >
          <TextView
              android:text="功能1"
              style="@style/style_text_body_light"
              />
        </LinearLayout>
        <View
            style="@style/item_split_vertical"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="@android:color/white"
              android:gravity="center"
              android:orientation="vertical"
              >
            <TextView
                android:text="功能2"
                style="@style/style_text_body_light"
                />
          </LinearLayout>
          <View
              style="@style/item_split_horizontal"
              />
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="@android:color/white"
              android:gravity="center"
              android:orientation="vertical"
              >
            <TextView
                android:text="功能3"
                style="@style/style_text_body_light"
                />
          </LinearLayout>
        </LinearLayout>
      </LinearLayout>
      <View
          style="@style/item_split_horizontal"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:background="@android:color/white"
          android:orientation="vertical"
          >
        <View
            style="@style/item_split_horizontal"
            />
        <TextView
            android:layout_margin="10dp"
            android:text="Tip"
            style="@style/style_text_body_light"
            />
        <View
            style="@style/item_split_horizontal"
            />
      </LinearLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:background="@android:color/white"
          android:orientation="vertical"
          >
        <View
            style="@style/item_split_horizontal"
            />
        <TextView
            android:layout_margin="10dp"
            android:text="模块1"
            style="@style/style_text_body_light"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            ></LinearLayout>
        <View
            style="@style/item_split_horizontal"
            />
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:background="@android:color/white"
          android:orientation="vertical"
          >
        <View
            style="@style/item_split_horizontal"
            />
        <TextView
            android:layout_margin="10dp"
            android:text="模块2"
            style="@style/style_text_body_light"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            ></LinearLayout>
        <View
            style="@style/item_split_horizontal"
            />
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:background="@android:color/white"
          android:orientation="vertical"
          >
        <View
            style="@style/item_split_horizontal"
            />
        <TextView
            android:layout_margin="10dp"
            android:text="模块3"
            style="@style/style_text_body_light"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            ></LinearLayout>
        <View
            style="@style/item_split_horizontal"
            />
      </LinearLayout>
      <Space
          android:layout_width="match_parent"
          android:layout_height="10dp"
          />
    </LinearLayout>
  </ScrollView>
</LinearLayout>