<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ui_content"
    android:orientation="vertical"
    >
  <RelativeLayout
      style="@style/actionbar_whole_style_base"
      >

    <TextView
        android:text="个人中心"
        style="@style/actionbar_title_style_base"
        />
  </RelativeLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:background="@android:color/white"
      android:orientation="vertical"
      >
    <View style="@style/item_split_horizontal"/>
    <RelativeLayout
        android:id="@+id/rl_account"
        style="@style/style_menu_list"
        >

      <TextView
          android:text="帐号绑定"
          style="@style/style_text_key_menu"
          />

      <TextView
          android:drawableRight="@drawable/icon_goto"
          style="@style/style_text_value_menu"
          />
    </RelativeLayout>
    <View style="@style/item_split_horizontal"/>
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:background="@android:color/white"
      android:orientation="vertical"
      >
    <View style="@style/item_split_horizontal"/>
    <RelativeLayout
        android:id="@+id/rl_borrow"
        style="@style/style_menu_list"
        >

      <TextView
          android:text="我的借阅"
          style="@style/style_text_key_menu"
          />

      <TextView
          android:drawableRight="@drawable/icon_goto"
          style="@style/style_text_value_menu"
          />
    </RelativeLayout>
    <View
        android:layout_marginLeft="10dp"
        style="@style/item_split_horizontal"
        />
    <RelativeLayout
        android:id="@+id/rl_bookrack"
        style="@style/style_menu_list"
        >

      <TextView
          android:text="我的书架"
          style="@style/style_text_key_menu"
          />

      <TextView
          android:drawableRight="@drawable/icon_goto"
          style="@style/style_text_value_menu"
          />
    </RelativeLayout>
    <View
        android:layout_marginLeft="10dp"
        style="@style/item_split_horizontal"
        />
    <RelativeLayout
        android:id="@+id/rl_appraise"
        style="@style/style_menu_list"
        >

      <TextView
          android:text="我的书评"
          style="@style/style_text_key_menu"
          />

      <TextView
          android:drawableRight="@drawable/icon_goto"
          style="@style/style_text_value_menu"
          />
    </RelativeLayout>
    <View style="@style/item_split_horizontal"/>
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:background="@android:color/white"
      android:orientation="vertical"
      >
    <View style="@style/item_split_horizontal"/>
    <RelativeLayout
        android:id="@+id/rl_about_lib"
        style="@style/style_menu_list"
        >

      <TextView
          android:text="关于图书馆"
          style="@style/style_text_key_menu"
          />

      <TextView
          android:drawableRight="@drawable/icon_goto"
          style="@style/style_text_value_menu"
          />
    </RelativeLayout>
    <View
        android:layout_marginLeft="10dp"
        style="@style/item_split_horizontal"
        />
    <RelativeLayout
        android:id="@+id/rl_setting"
        style="@style/style_menu_list"
        >

      <TextView
          android:text="设置"
          style="@style/style_text_key_menu"
          />

      <TextView
          android:drawableRight="@drawable/icon_goto"
          style="@style/style_text_value_menu"
          />
    </RelativeLayout>
    <View style="@style/item_split_horizontal"/>
  </LinearLayout>

</LinearLayout>