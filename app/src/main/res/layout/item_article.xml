<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="10dp"
    >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_toLeftOf="@+id/cover_0"
        android:ellipsize="end"
        android:lineSpacingExtra="2dp"
        android:maxLines="4"
        android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
        android:textColor="@color/color_text_title"
        android:textSize="16sp"
        />
    <ImageView
        android:id="@+id/cover_0"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:scaleType="center"
        android:src="@drawable/icon_loading2"
        />
  </RelativeLayout>

  <LinearLayout
      android:id="@+id/image_layout"
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:orientation="horizontal"
      >
    <ImageView
        android:id="@+id/cover_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:scaleType="center"
        android:src="@drawable/icon_loading2"
        />
    <ImageView
        android:id="@+id/cover_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:scaleType="center"
        android:src="@drawable/icon_loading2"
        />
    <ImageView
        android:id="@+id/cover_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:scaleType="center"
        android:src="@drawable/icon_loading2"
        />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:padding="5dp"
      >
    <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:text="XXX"
        android:textColor="@color/color_text_hint"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="YYYY/MM/DD"
        android:textColor="@color/color_text_hint"
        android:textSize="12sp"
        />
  </LinearLayout>
</LinearLayout>