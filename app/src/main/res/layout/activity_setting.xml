<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ui_content"
    android:orientation="vertical"
    >

  <RelativeLayout style="@style/actionbar_whole_style_white">

    <TextView
        android:id="@+id/tv_back"
        style="@style/actionbar_left_style_white"
        />
    <TextView
        android:text="设置"
        style="@style/actionbar_title_style_white"
        />
    <View style="@style/item_split_horizontal"/>
  </RelativeLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:background="@android:color/white"
      android:orientation="vertical"
      >
    <View style="@style/item_split_horizontal"/>
    <RelativeLayout
        android:id="@+id/rl_push"
        style="@style/style_menu_list"
        >

      <TextView
          android:text="消息通知"
          style="@style/style_text_key_menu"
          />

      <ImageView
          android:id="@+id/iv_push_state"
          android:layout_width="60dp"
          android:layout_height="40dp"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:src="@drawable/icon_switch_on"
          />
    </RelativeLayout>
    <View style="@style/item_split_horizontal"/>
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:background="@android:color/white"
      android:orientation="vertical"
      >
    <View style="@style/item_split_horizontal"/>
    <RelativeLayout
        android:id="@+id/rl_appraise"
        style="@style/style_menu_list"
        >

      <TextView
          android:text="给我们点个赞"
          style="@style/style_text_key_menu"
          />

      <TextView
          android:drawableRight="@drawable/icon_goto"
          style="@style/style_text_value_menu"
          />
    </RelativeLayout>
    <View
        android:layout_marginLeft="10dp"
        style="@style/item_split_horizontal"
        />
    <RelativeLayout
        android:id="@+id/rl_invitation"
        style="@style/style_menu_list"
        >

      <TextView
          android:text="邀请好友使用"
          style="@style/style_text_key_menu"
          />

      <TextView
          android:drawableRight="@drawable/icon_goto"
          style="@style/style_text_value_menu"
          />
    </RelativeLayout>
    <View
        android:layout_marginLeft="10dp"
        style="@style/item_split_horizontal"
        />
    <RelativeLayout
        android:id="@+id/rl_app"
        style="@style/style_menu_list"
        >

      <TextView
          android:text="精品应用推荐"
          style="@style/style_text_key_menu"
          />

      <TextView
          android:drawableRight="@drawable/icon_goto"
          style="@style/style_text_value_menu"
          />
    </RelativeLayout>
    <View style="@style/item_split_horizontal"/>
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:background="@android:color/white"
      android:orientation="vertical"
      >
    <View style="@style/item_split_horizontal"/>
    <RelativeLayout
        android:id="@+id/rl_update"
        style="@style/style_menu_list"
        >

      <TextView
          android:text="版本升级"
          style="@style/style_text_key_menu"
          />

      <TextView
          android:id="@+id/tv_version"
          android:drawableRight="@drawable/icon_goto"
          style="@style/style_text_value_menu"
          />
    </RelativeLayout>
    <View
        android:layout_marginLeft="10dp"
        style="@style/item_split_horizontal"
        />
    <RelativeLayout
        android:id="@+id/rl_clear"
        style="@style/style_menu_list"
        >

      <TextView
          android:text="清除缓存"
          style="@style/style_text_key_menu"
          />

      <TextView
          android:id="@+id/tv_cache"
          android:drawableRight="@drawable/icon_goto"
          android:text="0.0M"
          style="@style/style_text_value_menu"
          />
    </RelativeLayout>
    <View
        android:layout_marginLeft="10dp"
        style="@style/item_split_horizontal"
        />

    <RelativeLayout
        android:id="@+id/rl_feedback"
        style="@style/style_menu_list"
        >

      <TextView
          android:text="意见反馈"
          style="@style/style_text_key_menu"
          />

      <TextView
          android:drawableRight="@drawable/icon_goto"
          style="@style/style_text_value_menu"
          />
    </RelativeLayout>
    <View
        android:layout_marginLeft="10dp"
        style="@style/item_split_horizontal"
        />
    <RelativeLayout
        android:id="@+id/rl_about"
        style="@style/style_menu_list"
        >

      <TextView
          android:text="关于我们"
          style="@style/style_text_key_menu"
          />

      <TextView
          android:drawableRight="@drawable/icon_goto"
          style="@style/style_text_value_menu"
          />
    </RelativeLayout>
    <View style="@style/item_split_horizontal"/>
  </LinearLayout>

  <Button
      android:id="@+id/btn_exit"
      android:layout_width="match_parent"
      android:layout_height="45dp"
      android:layout_margin="20dp"
      android:background="@drawable/bg_selector_danger"
      android:text="退出账号"
      android:textColor="@android:color/white"
      android:textSize="14sp"
      />
</LinearLayout>
