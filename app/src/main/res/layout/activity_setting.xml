<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ui_content"
    android:orientation="vertical"
    >

  <RelativeLayout style="@style/actionbar_whole_style_white">

    <TextView
        android:id="@+id/tvBack"
        style="@style/actionbar_left_style_white"
        />

    <TextView
        android:text="设置"
        style="@style/actionbar_title_style_white"
        />
  </RelativeLayout>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:orientation="vertical"
          >

        <RelativeLayout
            android:id="@+id/rlMine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_selector_while"
            >

          <TextView
              android:id="@+id/tvUserName"
              android:layout_margin="10dp"
              android:text="个人中心"
              style="@style/style_text_key_menu"
              />

          <ImageView
              android:id="@+id/ivMine"
              android:layout_width="60dp"
              android:layout_height="60dp"
              android:layout_centerVertical="true"
              android:layout_margin="10dp"
              android:layout_toLeftOf="@+id/tvmine"
              android:src="@drawable/level_list"
              />

          <TextView
              android:id="@+id/tvmine"
              android:layout_marginRight="10dp"
              android:drawableRight="@drawable/icon_goto"
              style="@style/style_text_value_menu"
              />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlPwd"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="0.5dp"
            android:background="@drawable/bg_selector_while"
            android:padding="10dp"
            >

          <TextView
              android:text="修改密码"
              style="@style/style_text_key_menu"
              />

          <TextView
              android:drawableRight="@drawable/icon_goto"
              style="@style/style_text_value_menu"
              />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlShare"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_selector_while"
            android:padding="10dp"
            >

          <TextView
              android:text="邀请好友使用"
              style="@style/style_text_key_menu"
              />

          <TextView
              android:drawableRight="@drawable/icon_goto"
              style="@style/style_text_value_menu"
              />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlPush"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/bg_selector_while"
            >

          <TextView
              android:layout_marginLeft="10dp"
              android:text="消息通知"
              style="@style/style_text_key_menu"
              />

          <ImageView
              android:id="@+id/ivPushState"
              android:layout_width="60dp"
              android:layout_height="40dp"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:layout_marginRight="10dp"
              android:src="@drawable/icon_switch_on"
              />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlCheck"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_selector_while"
            android:padding="10dp"
            >

          <TextView
              android:id="@+id/textView4"
              android:text="版本升级"
              style="@style/style_text_key_menu"
              />

          <TextView
              android:id="@+id/tvCheck"
              android:drawableRight="@drawable/icon_goto"
              style="@style/style_text_value_menu"
              />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlClear"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="0.5dp"
            android:background="@drawable/bg_selector_while"
            android:padding="10dp"
            >

          <TextView
              android:text="清除缓存"
              style="@style/style_text_key_menu"
              />

          <ProgressBar
              android:id="@+id/barClear"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:layout_marginRight="5dp"
              style="@android:style/Widget.ProgressBar.Small"
              />

          <TextView
              android:id="@+id/tvClear"
              android:drawableRight="@drawable/icon_goto"
              android:text="0.0M"
              style="@style/style_text_value_menu"
              />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlFeedback"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="0.5dp"
            android:background="@drawable/bg_selector_while"
            android:padding="10dp"
            >

          <TextView
              android:text="意见反馈"
              style="@style/style_text_key_menu"
              />

          <TextView
              android:drawableRight="@drawable/icon_goto"
              style="@style/style_text_value_menu"
              />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlAbout"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="0.5dp"
            android:background="@drawable/bg_selector_while"
            android:padding="10dp"
            >

          <TextView
              android:text="关于我们"
              style="@style/style_text_key_menu"
              />

          <TextView
              android:drawableRight="@drawable/icon_goto"
              style="@style/style_text_value_menu"
              />
        </RelativeLayout>

      </LinearLayout>

      <Button
          android:id="@+id/btnExit"
          android:layout_width="match_parent"
          android:layout_height="45dp"
          android:layout_margin="20dp"
          android:background="@drawable/bg_selector_red_circle"
          android:text="退出账号"
          android:textColor="@color/color_white"
          android:textSize="14sp"
          />
    </LinearLayout>
  </ScrollView>
</LinearLayout>
