<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ui_content"
    android:clickable="true"
    android:orientation="vertical"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:background="@android:color/white"
      android:orientation="vertical"
      >
    <View style="@style/item_split_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

      <TextView
          android:layout_width="80dp"
          android:gravity="right"
          android:text="+86"
          style="@style/style_text_body"
          />

      <EditText
          android:id="@+id/edt_username"
          android:layout_marginLeft="10dp"
          android:hint="请输入手机号码"
          android:inputType="number"
          android:text=""
          style="@style/style_edit_text"
          />
    </LinearLayout>
    <View style="@style/item_split_horizontal"/>
  </LinearLayout>

  <Button
      android:id="@+id/btn_next"
      android:layout_margin="20dp"
      android:text="下一步"
      style="@style/style_button_primary"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:orientation="horizontal"
      >
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_margin="3dp"
        android:src="@drawable/icon_checkbox_pressed"
        />
    <TextView
        android:layout_gravity="center"
        android:text="我已阅读并同意"
        android:textSize="12sp"
        style="@style/style_text_body_light"
        />
    <TextView
        android:id="@+id/tv_protocol"
        android:layout_gravity="center"
        android:text="《服务协议》"
        android:textSize="12sp"
        style="@style/style_text_theme"
        />
  </LinearLayout>
</LinearLayout>