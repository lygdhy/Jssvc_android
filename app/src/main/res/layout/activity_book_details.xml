<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ui_content"
    android:orientation="vertical">

    <RelativeLayout style="@style/actionbar_whole_style_base">

        <TextView
            android:id="@+id/tvBack"
            style="@style/actionbar_left_style_base" />

        <TextView
            style="@style/actionbar_title_style_base"
            android:text="图书详情" />

        <ImageView
            android:id="@+id/tvCollect"
            style="@style/actionbar_right_style_base"
            android:src="@drawable/icon_collect_on" />
    </RelativeLayout>

    <org.jssvc.lib.view.ScrollViewExtend
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="horizontal"
                android:padding="10dp">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/bookView"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:background="@drawable/def_book_cover"
                    fresco:placeholderImage="@drawable/def_book_cover" />

                <TextView
                    android:id="@+id/tvBookName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:lineSpacingExtra="3sp"
                    android:maxLines="5"
                    android:paddingLeft="10dp"
                    android:text="书名"
                    android:textColor="@color/color_text_title"
                    android:textIsSelectable="true"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/icon_stress_top_border"
                android:visibility="gone" />

            <android.support.design.widget.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:tabBackground="@color/color_white"
                app:tabIndicatorColor="@color/colorAccent"
                app:tabIndicatorHeight="2dp"
                app:tabMode="fixed"
                app:tabPaddingEnd="12dp"
                app:tabPaddingStart="12dp"
                app:tabSelectedTextColor="@color/colorAccent"
                app:tabTextColor="@color/color_text_title" />

            <View
                style="@style/item_split_horizontal"
                android:background="@color/color_ui_content" />

            <org.jssvc.lib.view.CustomViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </org.jssvc.lib.view.ScrollViewExtend>
</LinearLayout>
