<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
  <View style="@style/item_split_horizontal"/>

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@android:color/white"
      android:orientation="vertical"
      android:padding="10dp"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <TextView
          android:id="@+id/tvTitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="2dp"
          android:ellipsize="end"
          android:lineSpacingExtra="2dp"
          android:maxLines="2"
          android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
          android:textColor="@color/color_text_title"
          android:textSize="16sp"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="借阅日："
            android:textColor="@color/color_text_hint"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="2016.9.23 — 2016.11.22"
            android:textColor="@color/color_danger"
            android:textSize="14sp"
            />
      </LinearLayout>

      <TextView
          android:id="@+id/tvCode"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="2dp"
          android:text="条码号：000000"
          android:textColor="@color/color_text_hint"
          android:textSize="10sp"
          />

      <TextView
          android:id="@+id/tvPlace"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="2dp"
          android:text="馆藏地：XXX"
          android:textColor="@color/color_text_hint"
          android:textSize="10sp"
          />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_alignParentRight="true"
          android:orientation="horizontal"
          >

        <TextView
            android:id="@+id/tvXu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="10dp"
            android:text="续借"
            android:textColor="@color/color_ui_theme"
            android:textSize="14sp"
            />
      </LinearLayout>

    </RelativeLayout>

  </FrameLayout>
  <View style="@style/item_split_horizontal"/>
  <View
      android:layout_width="match_parent"
      android:layout_height="10dp"
      />

</LinearLayout>